{
  "name": "msw-signalr",
  "version": "2.0.0",
  "description": "Adds simple signalR hub mocking to msw",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mamidenn/msw-signalr.git"
  },
  "author": "Martin Dennhardt <martin@dennhardt.de>",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@microsoft/signalr": ">=5.0.0",
    "jsdom": "^23.0.0",
    "prettier": "^3.1.0",
    "publint": "^0.2.5",
    "typescript": "^5.3.2",
    "vite": "^5.0.2",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "msw": "^2.0.0"
  },
  "peerDependencies": {
    "@microsoft/signalr": ">=5.0.0"
  },
  "scripts": {
    "build": "vite build",
    "prerelease": "npm run build && tsc -p ./tsconfig.build.json && publint",
    "release": "changeset publish",
    "test": "vitest",
    "dev": "vite"
  },
  "files": [
    "./dist"
  ],
  "exports": {
