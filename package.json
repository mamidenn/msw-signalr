    "import": "./dist/msw-signalr.js",
    "require": "./dist/msw-signalr.umd.cjs"
  },
  "keywords": [
    "signalr",
    "api",
    "mock",
    "mocking",
    "worker",
    "prototype",
    "server",
    "service",
    "handler",
    "testing",
    "front-end",
    "back-end"
